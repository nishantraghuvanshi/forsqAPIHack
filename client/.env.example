# ===========================================
# FRONTEND ENVIRONMENT VARIABLES
# ===========================================

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_WS_URL=ws://localhost:5000

# Map Configuration
REACT_APP_DEFAULT_LAT=40.7128
REACT_APP_DEFAULT_LNG=-74.0060
REACT_APP_DEFAULT_ZOOM=14

# Google Maps API Key (optional for enhanced maps integration)
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Mapbox Configuration (alternative to Google Maps)
REACT_APP_MAPBOX_ACCESS_TOKEN=your-mapbox-token-here

# App Configuration
REACT_APP_APP_NAME=Recommendation Engine
REACT_APP_VERSION=1.0.0

# Theme Configuration
REACT_APP_THEME=light
REACT_APP_PRIMARY_COLOR=#1976d2

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_GEOLOCATION=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# Search Configuration
REACT_APP_DEFAULT_SEARCH_RADIUS=1000
REACT_APP_MAX_SEARCH_RESULTS=20
REACT_APP_AUTOCOMPLETE_DELAY=300

# Analytics (optional)
REACT_APP_GA_TRACKING_ID=your-google-analytics-id-here

# Debugging
REACT_APP_DEBUG=false

# Development
NODE_ENV=development
GENERATE_SOURCEMAP=true
REACT_APP_ENABLE_MOCK_DATA=false
