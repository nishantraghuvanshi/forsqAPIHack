# ===========================================
# PERSONALIZED RECOMMENDATION ENGINE
# Central Environment Configuration
# ===========================================

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Node Environment (development, production, test)
NODE_ENV=development

# Server Port
PORT=5000

# API Base URL
API_BASE_URL=http://localhost:5000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# ===========================================
# CLIENT CONFIGURATION
# ===========================================

# React App Port
REACT_APP_PORT=3000

# API Endpoint for Frontend
REACT_APP_API_URL=http://localhost:5000/api

# App Title
REACT_APP_TITLE=Recommendation Engine

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/recommendation-engine

# Database Options
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2
DB_CONNECTION_TIMEOUT=30000

# ===========================================
# EXTERNAL API KEYS
# ===========================================

# Foursquare Places API
# Get your API key from: https://foursquare.com/developers/
FOURSQUARE_API_KEY=your-foursquare-api-key-here
FOURSQUARE_BASE_URL=https://api.foursquare.com/v3

# Google Gemini AI API
# Get your API key from: https://aistudio.google.com/
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_TOKENS=2048
GEMINI_TEMPERATURE=0.3

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production

# ===========================================
# RATE LIMITING
# ===========================================

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Search Rate Limiting
SEARCH_RATE_LIMIT_WINDOW_MS=60000
SEARCH_RATE_LIMIT_MAX_REQUESTS=20

# AI Rate Limiting
AI_RATE_LIMIT_WINDOW_MS=60000
AI_RATE_LIMIT_MAX_REQUESTS=10

# ===========================================
# CACHING CONFIGURATION
# ===========================================

# Redis Cache (optional but recommended for production)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL Settings (in seconds)
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600

# Memory Cache Settings
MEMORY_CACHE_MAX_SIZE=1000
MEMORY_CACHE_TTL=600

# ===========================================
# FOURSQUARE API CONFIGURATION
# ===========================================

# Search Configuration
DEFAULT_SEARCH_RADIUS=1000
MAX_SEARCH_RESULTS=50
MIN_SEARCH_RESULTS=5

# Place Categories
POPULAR_CATEGORIES=13065,13003,13035,13236,13032
FOOD_CATEGORIES=13065,13003,13032,13145
ENTERTAINMENT_CATEGORIES=13035,13236,13058

# ===========================================
# AI CONFIGURATION
# ===========================================

# AI Processing Settings
AI_CONFIDENCE_THRESHOLD=0.7
AI_MAX_RETRIES=3
AI_TIMEOUT_MS=30000

# Recommendation Settings
MAX_RECOMMENDATIONS=20
MIN_RELEVANCE_SCORE=0.3

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log Level (error, warn, info, verbose, debug, silly)
LOG_LEVEL=info

# Log File Settings
ENABLE_FILE_LOGGING=true
LOG_FILE_PATH=logs/
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# ===========================================
# EMAIL CONFIGURATION (optional)
# ===========================================

# SMTP Settings for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Settings
FROM_EMAIL=noreply@recommendationengine.com
SUPPORT_EMAIL=support@recommendationengine.com

# ===========================================
# MONITORING & ANALYTICS
# ===========================================

# Application Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Error Tracking
SENTRY_DSN=your-sentry-dsn-here

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_SAMPLE_RATE=0.1

# ===========================================
# FEATURE FLAGS
# ===========================================

# AI Features
ENABLE_AI_RANKING=true
ENABLE_AI_SUGGESTIONS=true
ENABLE_FEEDBACK_LEARNING=true

# Cache Features
ENABLE_REDIS_CACHE=false
ENABLE_MEMORY_CACHE=true

# Search Features
ENABLE_AUTOCOMPLETE=true
ENABLE_TRENDING_PLACES=true
ENABLE_NEARBY_SEARCH=true

# User Features
ENABLE_USER_PREFERENCES=true
ENABLE_SEARCH_HISTORY=true
ENABLE_FAVORITES=true

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Debug Settings
DEBUG=recommendation-engine:*
VERBOSE_LOGGING=false

# Development Tools
ENABLE_CORS_ALL_ORIGINS=true
ENABLE_REQUEST_LOGGING=true

# Hot Reload
ENABLE_HOT_RELOAD=true

# ===========================================
# PRODUCTION CONFIGURATION
# ===========================================

# Security Headers
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# SSL/TLS
SSL_CERT_PATH=
SSL_KEY_PATH=

# Performance
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000

# ===========================================
# TESTING CONFIGURATION
# ===========================================

# Test Database
TEST_MONGODB_URI=mongodb://localhost:27017/recommendation-engine-test

# Mock APIs
ENABLE_MOCK_FOURSQUARE=false
ENABLE_MOCK_GEMINI=false

# Test Settings
TEST_TIMEOUT=10000
TEST_COVERAGE_THRESHOLD=80

# ===========================================
# BACKUP & MAINTENANCE
# ===========================================

# Backup Settings
ENABLE_AUTO_BACKUP=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Cleanup Settings
CLEANUP_OLD_LOGS_DAYS=7
CLEANUP_OLD_SEARCHES_DAYS=90

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Container Settings
CONTAINER_PORT=5000
HEALTH_CHECK_INTERVAL=30000

# Load Balancer
ENABLE_LOAD_BALANCER=false
LB_HEALTH_CHECK_PATH=/health

# Auto Scaling
MIN_INSTANCES=1
MAX_INSTANCES=5

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================

# Google Maps (optional)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Mapbox (optional)
MAPBOX_ACCESS_TOKEN=your-mapbox-token-here

# Twilio (optional for SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-sid-here
TWILIO_AUTH_TOKEN=your-twilio-token-here

# ===========================================
# CUSTOM CONFIGURATION
# ===========================================

# Business Logic
MAX_USER_SEARCHES_PER_DAY=1000
MAX_FEEDBACK_PER_PLACE=100

# UI/UX Settings
DEFAULT_MAP_ZOOM=14
DEFAULT_SEARCH_RADIUS_UI=1000
MAX_AUTOCOMPLETE_RESULTS=10

# ===========================================
# NOTES & INSTRUCTIONS
# ===========================================

# 1. Copy this file to .env in your project root
# 2. Update all placeholder values with your actual credentials
# 3. Never commit the actual .env file to version control
# 4. For production, set NODE_ENV=production
# 5. Enable Redis cache for better performance in production
# 6. Set stronger JWT secrets for production (minimum 32 characters)
# 7. Configure proper CORS origins for production
# 8. Set up proper SSL certificates for HTTPS
# 9. Configure monitoring and error tracking for production
# 10. Review and adjust rate limits based on your usage patterns
