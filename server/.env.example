# Server Environment Variables

# Node Environment
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/recommendation-engine

# API Keys
FOURSQUARE_API_KEY=your-foursquare-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3000

# OpenAI Configuration
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Foursquare Configuration
FOURSQUARE_BASE_URL=https://api.foursquare.com/v3
DEFAULT_SEARCH_RADIUS=1000
MAX_SEARCH_RESULTS=50
